<div class="title-container">
  <h1>Calendar</h1>
</div>

<%= month_calendar do |date| %>
  <%= date.day %>
  <% if @sessions.exists? %>
    <% @sessions.select { |session| session.start_time.to_date == date }.each do |session| %>
      <div class="session-item">
        ðŸ“š <%= link_to session.title, course_session_path(session.course_id, session.id), class: 'session-title' %>
        <span class="session-time">
          <%= session.start_time.strftime("%I:%M %p") %> - <%= session.end_time.strftime("%I:%M %p") %>
        </span>
      </div>
    <% end %>
  <% else %>

  <% end %>
<% end %>
