  <ul class="category-list">
    <li class="category-item"><%= link_to "Technology", courses_category_index_path("technology"), class: "category-link" %></li>
    <li class="category-item"><%= link_to "Education", courses_category_index_path("education"), class: "category-link" %></li>
    <li class="category-item"><%= link_to "Cooking", courses_category_index_path("cooking"), class: "category-link" %></li>
    <li class="category-item"><%= link_to "Gardening", courses_category_index_path("gardening"), class: "category-link" %></li>
    <li class="category-item"><%= link_to "Sports", courses_category_index_path("sports"), class: "category-link" %></li>
    <li class="category-item"><%= link_to "Others", courses_category_index_path("others"), class: "category-link" %></li>
  </ul>
</div>
