<div class="container">
  <h2 class="login-heading">New Class</h2>
  <%= simple_form_for([@course, @session], html: { class: "login-form custom-form-width text-start" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, input_html: { class: "form-control" } %>
    <%= f.input :description, input_html: { class: "form-control" } %>
    <%= f.input :date, input_html: { class: "form-control" } %>
    <%= f.input :start_time, input_html: { class: "form-control" } %>
    <%= f.input :end_time, input_html: { class: "form-control" } %>
    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  </div>
</div>
