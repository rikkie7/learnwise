<h2 class="login-heading">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login-form" }) do |f| %>


  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Request password reset", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links", class: "auth-links" %>
